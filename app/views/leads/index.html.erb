
<%= render 'shared/full_box', title: "Leads", buttons: @buttons do %>
  
  <%= content_tag :table, class: "table table-bordered" do %>
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Address</th>
        <th>City</th>
        <th>State</th>
        <th>Zip Code</th>
        <th>Phone Number</th>
        <th>Phone Number 2</th>
        <th>Email</th>
        <th>Called?</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @leads.each do |lead| %>
        <tr>
          <td><%= lead.first_name %></td>
          <td><%= lead.last_name %></td>
          <td><%= lead.address %></td>
          <td><%= lead.city %></td>
          <td><%= lead.state %></td>
          <td><%= lead.zip_code %></td>
          <td><%= lead.phone_number %></td>
          <td><%= lead.phone_number_2 %></td>
          <td><%= lead.email %></td>
          <td><%= lead.called.to_s %></td>
          <%= content_tag :td do %>
            <%= link_to 'Automated Call', call_lead_path(lead), method: "POST" if lead.phone_number || lead.phone_number_2 %>
          <% end %>
          <td><%= link_to 'Show', lead %></td>
          <td><%= link_to 'Edit', edit_lead_path(lead) %></td>
          <td><%= link_to 'Destroy', lead, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  <% end if @leads.any? %>

  <% if @leads.blank? %>
    <%= render 'shared/titled_box', title: "There are no leads." do %>
      <%= content_tag :div, class: "my-text-muted" do %>
        <%= "Add leads to manage potential sales and make automated calls." %>
      <% end %>
    <% end %>
  <% end %>

<% end %>











